#  %gobuild -o %{gobuilddir}/bin/$(basename $cmd) %{goipath}/$cmd
# done
%gobuild -o %{gobuilddir}/bin/efs2tar %{goipath}

%install
%gopkginstall
install -m 0755 -vd                     %{buildroot}%{_bindir}
install -m 0755 -vp %{gobuilddir}/bin/* %{buildroot}%{_bindir}/

%if %{with check}
%check
%gocheck
%endif

%files -n efs2tar
%license LICENSE
%doc README.md
%{_bindir}/efs2tar

