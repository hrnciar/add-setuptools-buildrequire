BuildRequires:  golang(golang.org/x/sys/unix)
BuildRequires:  socat

%description
%{common_description}

%gopkg

%prep
%goprep

%build
for cmd in portlist; do
  %gobuild -o %{gobuilddir}/bin/$(basename $cmd) %{goipath}/$cmd
done

%install
%gopkginstall
install -m 0755 -vd                     %{buildroot}%{_bindir}
install -m 0755 -vp %{gobuilddir}/bin/* %{buildroot}%{_bindir}/

%if %{with check}
%check
%gocheck
%endif

%files
%license LICENSE
%doc README.md
